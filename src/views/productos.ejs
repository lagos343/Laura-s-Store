    <div class="contenedor">
        <div>
            <h2>Productos varios</h2>
        </div>
        <br>
        <br>
        <div class="row">
            <% ProductosOferta.forEach(function(producto){ %>
                <%- include('components/productospopulares', {producto: producto}); %>
            <% }); %>
        </div>
    </div>

    <br><br>
    <div class="contenedor">
        <br>
        <br>

        <div>
            <h2>Productos de belleza</h2>
        </div>
        <br>
        <br>
        <div class="row">
            <% OfertasBelleza.forEach(function(oferta){ %>
                <%- include('components/productosdebelleza', {oferta: oferta}); %>
            <% }); %>
        </div>
    </div>

    <!-- --------------------------------------------------
        segundo par 
    ------------------------------------------------------- -->

    <br><br>
    <div class="contenedor">
        <div>
            <h2>Productos gaming</h2>
        </div>
        <br>
        <br>
        <div class="row">
            <% ProductosOferta2.forEach(function(producto){ %>
                <%- include('components/productospopulares', {producto: producto}); %>
            <% }); %>
        </div>
    </div>

    <br><br>
    <div class="contenedor">
        <br>
        <br>

        <div>
            <h2>Productos de calzado</h2>
        </div>
        <br>
        <br>
        <div class="row">
            <% Ofertaszapato.forEach(function(oferta){ %>
                <%- include('components/productosdebelleza', {oferta: oferta}); %>
            <% }); %>
        </div>
    </div>

    <!-- footer -->
    <%- include ('components/footer'); -%>
    <script src="/js/carrito.js"></script>    
</body>

</html>